{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2017",
    "module": "commonjs",
    "lib": [ "dom", "es7" ],
    "removeComments": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "allowSyntheticDefaultImports": true,
    // "esModuleInterop": true,

    /* Source Maps */
    "sourceMap": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
